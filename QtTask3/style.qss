QPushButton {
    background-color: rgba(255, 255, 255, 0.5); /* 半透明背景 */
    border: 2px solid rgba(0, 0, 0, 0.3); /* 半透明边框 */
    border-radius: 10px; /* 圆角 */
    color: black; /* 文字颜色 */
    padding: 10px; /* 内边距 */
    font-size: 16px; /* 字体大小 */
}

QPushButton:hover {
    background-color: rgba(200, 200, 255, 0.7); /* 鼠标悬停时的背景色 */
}

QPushButton:pressed {
    background-color: rgba(150, 150, 255, 0.9); /* 按下时的背景色 */
}
